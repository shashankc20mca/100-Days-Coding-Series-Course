#include<iostream>
#include<string>
using namespace std;
int main(){
string s;
cout<<"Enter the string"<<endl;
getline(cin,s);
for(int i=0;i<s.length();i++){
        if(i==0||i==s.length()-1){
            s[i]=toupper(s[i]);
        }
        if(s[i+1]==' '){
            s[i]=toupper(s[i]);
        }
         if(s[i-1]==' '){
            s[i]=toupper(s[i]);
        }

}
cout<<s;


return 0;
}
