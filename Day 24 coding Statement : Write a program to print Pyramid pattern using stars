#include<iostream>
using namespace std;
int main(){
    int a,r=0;
    cout<<"Enter the number"<<endl;
    cin>>a;
    int s=a-1;
  for(int i=1;i<=a;i++){
        for(int i=1;i<=s;i++){
            cout<<" ";
        }
    cout<<'*';
    for(int i=1;i<=r;i++){
        cout<<'*';
    }
    r=r+2;
    s=s-1;
    cout<<endl;
  }



return 0;
}
