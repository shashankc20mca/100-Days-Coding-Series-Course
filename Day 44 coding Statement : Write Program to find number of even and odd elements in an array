#include<iostream>

using namespace std;
int main(){
int n,e=0,o=0;
cout<<"Enter the number of elements in the array"<<endl;
cin>>n;
int arr[n];
cout<<"Enter the elements of the array seperated by the space"<<endl;
for(int i=0;i<n;i++){
    cin>>arr[n];
    if((arr[n]%2)==0){
            e=e+1;

    }
    else{o=o+1;}
}
cout<<"Number of even elements are "<<e<<endl;
cout<<"Number of odd elements are "<<o<<endl;




return 0;
}

 
